---
import * as CONTENT from "../pages/content";
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"Acerca de mí"} icon={"mdi:account-badge-outline"}>
    {CONTENT.about}
  </AccordionLayout>
  <AccordionLayout title={"Experiencia"} icon={"ic:baseline-work-outline"}>
    {
      CONTENT.work.map((item) => {
        return (
          <Card
            title={item.role}
            timeframe={`${item.from} - ${item.to}`}
            description={item.location}
            url={item.org_url}
            url_name={item.org}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Projectos"} icon={"ion:md-build"}>
    {
      CONTENT.projects.map((item) => {
        return (
          <Card
            title={item.title}
            url={item.url}
            url_name={"Ver codigo Fuente"}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Educación"} icon={"carbon:education"}>
    {
      CONTENT.education.map((item) => {
        return (
          <Card
            title={item.course}
            timeframe={`${item.from} - ${item.to}`}
            description={item.location}
            tags={""}
            url={"#"}
            url_name={item.institute}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Certificados"} icon={"carbon:certificate"}>
    {
      CONTENT.certificates.map((item) => {
        return (
          <Card
            title={item.title}
            timeframe={item.issued}
            description={item.org}
            tags={item.description}
            url={item.url}
            url_name={"Ver Certificado"}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Contáctame"} icon={"ri:contacts-book-fill"}>
    {
      CONTENT.contact.map((item) => {
        return (
          <Card
            title={""}
            timeframe=""
            description=""
            tags=""
            url={item.source}
            url_name={item.source_name}
          />
        );
      })
    }
  </AccordionLayout>
</ul>
