// src/components/SkillsSection.astro
---
import * as CONTENT from "../pages/content";
import AccordionLayout from "../layouts/AccordionLayout.astro";
import SkillBar from "./SkillBar.astro";

const colors = [
  "bg-blue-500",
  "bg-green-500",
  "bg-purple-500",
  "bg-yellow-500",
  "bg-pink-500",
  "bg-indigo-500",
  "bg-red-500",
  "bg-teal-500"
];
---

<AccordionLayout title={"Habilidades TÃ©cnicas"} icon={"carbon:skill-level"}>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {CONTENT.skills.map((category, catIndex) => (
      <div class="mb-6">
        <h3 class="text-xl font-semibold mb-4 text-text/90 dark:text-white/90">{category.category}</h3>
        <div>
          {category.items.map((skill, index) => (
            <SkillBar 
              skill={skill.name} 
              percentage={skill.level} 
              color={colors[(catIndex + index) % colors.length]} 
            />
          ))}
        </div>
      </div>
    ))}
  </div>
</AccordionLayout>